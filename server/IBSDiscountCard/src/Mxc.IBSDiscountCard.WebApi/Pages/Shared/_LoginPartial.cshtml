@using Microsoft.AspNetCore.Identity
@using Mxc.IBSDiscountCard.Common.LoggedInUserAccessor
@inject ILoggedInUserAccessor UserAccessor

<ul class="navbar-nav">
    @if (UserAccessor.UserName != null)
    {
        <li class="nav-item">
            <a class="nav-link text-dark">Hello @UserAccessor.UserName!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new {area = ""})" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>